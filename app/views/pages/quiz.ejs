<%- include('../partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">Votre quiz</h2>
    <h2><%= quiz.title %> </h2>
    <hr>

    <div class="d-flex flex-row justify-content-center align-items-center">
        <p class="px-3">Cat√©gorie(s) :</p>
        <% tags.forEach(tag => { %>
        <p class="px-3"> <%= tag.name %> </p>
        <% }) %>
    </div>


    <hr>

    <p class="lead"><%= quiz.description %></p>
    <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor
        invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo
        duo</p>
</div>

<hr>


<div class="card-deck d-flex flex-column mb-3 text-center">
    <h3>Questions</h3>
    <hr>
    <div class="col-12 d-flex flex-column">
        <% quizByLevel.forEach(element => { %>

        <div class="card mb-4 shadow-sm d-flex flex-column">

            <h3 class="card-header">Niveau <%= element.level_id %></h3>

            <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="h4 card-title pricing-card-title"><%= element.question %> </h4>

                <% element.answers.forEach(element => { %>
                <p><%= element.description %> </p>
                <% }) %>

            </div>
        </div>
        <% }) %>

    </div>

</div>


<%- include('../partials/footer') %>