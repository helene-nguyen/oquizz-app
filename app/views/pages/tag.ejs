<%- include('../partials/header') %>
<h2><%= title %> </h2>

<hr>

<h4>Il y a : <%= quizByTag.length %> quiz</h4>

<hr>

<div class="card-deck row mb-3 text-center">

    <% quizByTag.forEach(element => { %>
    
    <div class="col-4 d-flex flex-column">
        <div class="card mb-4 shadow-sm d-flex flex-column">
            <div class="card-header">
                <h3 class="h4 my-0 font-weight-normal"><%= element.title %></h3>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="h4 card-title pricing-card-title"><%= element.description %></h4>
                
                <a href="/quiz/<%= element.id %>" class="btn btn-lg btn-block btn-primary text-white">Jouer</a>
            </div>
        </div>
    </div>

    <% }) %>

</div>


<%- include('../partials/footer') %>