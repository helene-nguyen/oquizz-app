<%- include('../partials/header') %>
<h2><%= title %> </h2>

<hr>

<div class="card-deck row mb-3 text-center">
    <% tags.forEach(element => { %>
    <div class="col-4 d-flex flex-column">
        <div class="card mb-4 shadow-sm d-flex flex-column">
            <div class="card-header">
                <h3 class="h4 my-0 font-weight-normal">Sujet</h3>
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h4 class="h4 card-title pricing-card-title"><%= element.name %></h4>
                
                <a href="/tags/<%= element.id %>" class="btn btn-lg btn-block btn-primary text-white">Afficher</a>
            </div>
        </div>
    </div>

    <% }) %>
</div>


<%- include('../partials/footer') %>